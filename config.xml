    </plugin>
    <plugin name="cordova-universal-links-plugin" spec="https://github.com/flipflopapp/cordova-universal-links-plugin.git" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.3" />
